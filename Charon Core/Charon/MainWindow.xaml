<Window x:Class="Charon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Charon Bot - Navigation Test" Height="600" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4A0E0E"/> <!-- Dark Red -->
            <Setter Property="Foreground" Value="#E0E0E0"/> <!-- Light Grey -->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#8B0000"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6D1515"/> <!-- Lighter Red -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2B0505"/> <!-- Very Dark Red -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#1E1919"> <!-- Dark Brown/Grey Background -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="CHARON NAVIGATION" FontSize="20" FontWeight="Bold" Foreground="#A03030" HorizontalAlignment="Center" Margin="10"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
                <TextBlock Text="Main Menu" Foreground="Gray" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnWindow" Content="Window" Width="100" Click="BtnWindow_Click"/>
                    <Button x:Name="BtnDrive" Content="Drive" Width="100" Click="BtnDrive_Click"/>
                    <Button x:Name="BtnSinners" Content="Sinners" Width="100" Click="BtnSinners_Click"/>
                </StackPanel>

                <TextBlock Text="Luxcavation" Foreground="Gray" Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnLuxEXP" Content="EXP" Width="100" Click="BtnLuxEXP_Click"/>
                    <Button x:Name="BtnLuxThread" Content="Thread" Width="100" Click="BtnLuxThread_Click"/>
                </StackPanel>
                <Button x:Name="BtnBackFromLux" Content="Back to Drive" Click="BtnDrive_Click" Background="#5A2E0E" BorderBrush="#8B4500" Width="200" Margin="5"/>

                <TextBlock Text="Mirror Dungeon" Foreground="Gray" Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnMD" Content="Enter" Width="100" Click="BtnMD_Click"/>
                    <Button x:Name="BtnMDDelving" Content="Resume" Width="100" Click="BtnMDDelving_Click"/>
                </StackPanel>

                <TextBlock Text="Charge Menu" Foreground="Gray" Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnChargeBoxes" Content="Boxes" Width="80" Click="BtnChargeBoxes_Click"/>
                    <Button x:Name="BtnChargeModules" Content="Modules" Width="80" Click="BtnChargeModules_Click"/>
                    <Button x:Name="BtnChargeLunacy" Content="Lunacy" Width="80" Click="BtnChargeLunacy_Click"/>
                </StackPanel>
                <Button x:Name="BtnExitCharge" Content="Exit Charge (Back)" Click="BtnDrive_Click" Background="#5A2E0E" BorderBrush="#8B4500" Width="200" Margin="5"/>
                
                <TextBlock Text="Status" Foreground="Gray" Margin="0,15,0,5"/>
                <Button x:Name="BtnSync" Content="Synchronize State" Click="BtnSync_Click" Width="200"/>
                <TextBlock x:Name="TxtStatus" Text="State: Unknown" Foreground="#FF5555" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
        
        <StatusBar Grid.Row="2" Background="#252020" Foreground="Gray">
            <StatusBarItem>
                <TextBlock x:Name="TxtLog" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>